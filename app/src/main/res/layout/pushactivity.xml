<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center"
    tools:context=".Push">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Push"
        android:padding="20sp" />

    <RadioGroup
        android:orientation="horizontal"
        android:gravity="top|center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp">

        <RadioButton
            android:id="@+id/rad_bart"
            android:text="Bart"
            android:layout_width="wrap_content"
            android:onClick="radioClick"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rad_ralph"
            android:text="Ralph"
            android:checked="true"
            android:layout_width="wrap_content"
            android:onClick="radioClick"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rad_milhouse"
            android:text="Milhouse"
            android:layout_width="wrap_content"
            android:onClick="radioClick"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rad_lisa"
            android:text="Lisa"
            android:layout_width="wrap_content"
            android:onClick="radioClick"
            android:layout_height="wrap_content" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20sp">

        <EditText
            android:id="@+id/courseIDedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="course ID"
            android:layout_weight="5"
            />
        <EditText
            android:id="@+id/courseNameEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="course name"
            android:layout_weight="5"
            />
        <EditText
            android:id="@+id/grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="grade"
            android:layout_weight="5"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20sp">

        <Button
            android:id="@+id/pushBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Push"
            android:onClick="push"
            />
    </LinearLayout>


</LinearLayout>